@model BlogFelipeWeb.Models.ContUsuario.ListarUsuariosViewModel

@if (Model.iTotalDePaginas > 1)
{
    var proximaPagina = Model.iPaginaAtual + 1;
    var paginaAnterior = Model.iPaginaAtual - 1;

    <div class="pagination">
        @if (Model.iPaginaAtual > 1)
        {
            @Html.ActionLink("Pagina Anterior", "Index", "ListaUsuarios", new { pagina = paginaAnterior }, new { rel = "prev" })
        }
        @if (Model.iPaginaAtual < Model.iTotalDePaginas)
        {
            @Html.ActionLink("Proxima Pagina", "Index", "ListaUsuarios", new { pagina = proximaPagina }, new { rel = "prev" })
        }
    </div>
}
