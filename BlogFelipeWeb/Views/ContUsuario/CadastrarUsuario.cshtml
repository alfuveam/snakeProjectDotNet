@model BlogFelipeWeb.Models.Administracao.CadastrarUsuarioViewModel
@{
    ViewBag.Title = "CadastrarUsuario";
}

@using (Html.BeginForm())
{
    <h2>CadastrarUsuario</h2>
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(x => x.sLogin)
        @Html.TextBoxFor(x => x.sLogin, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.sLogin)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.sNome)
        @Html.TextBoxFor(x => x.sNome, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.sNome)
    </div>

    <div>
        @Html.LabelFor(x => x.sSenha)
        @Html.TextBoxFor(x => x.sSenha, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.sSenha)        
    </div>

    <p>
        <input type="submit" value="Salvar" class="btn btn-primary">
    </p>

}