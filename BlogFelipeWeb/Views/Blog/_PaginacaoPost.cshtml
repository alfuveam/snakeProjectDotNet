@model BlogFelipeWeb.Models.Detalhes.DetalhesPostViewModel
@if (Model.iTotalPaginas > 1)
{
    var paginaAnterior = Model.iPaginaAtual - 1;
    var proximaPagina = Model.iPaginaAtual + 1;

    <div class="pagination">
        @if (Model.iPaginaAtual > 1)
        {
            <a href="@Url.Action("Post", new
                {
                    id = Model.id,
                    pagina = paginaAnterior
                })#comentarios" rel="prev">Página anterior</a>
            if (proximaPagina != -1)
            {
                <text>|</text>
            }
        }
        @if (proximaPagina != -1)
        {
            <a href="@Url.Action("Post", new
                {
                    id = Model.id,
                    pagina = proximaPagina
                })#comentarios" rel="prev">Próxima página</a>
        }
    </div>
}